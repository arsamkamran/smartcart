<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="136dp"
            android:layout_marginStart="136dp"
            android:layout_marginTop="44dp"
            android:text="User Profile" />

        <com.andreabaccega.widget.FormEditText
            android:layout_marginTop="100sp"
            android:id="@+id/et_name_profile"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:hint="Name"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColor="#000"
            android:textColorHint="#000"
            app:testErrorString="Enter Full Name"
            app:testType="personFullName" />

    <com.andreabaccega.widget.FormEditText
        android:inputType="textEmailAddress"
        app:testErrorString="Please Enter a Valid Email"
        app:testType="email"
        android:id="@+id/et_email_profile"
        android:layout_width="wrap_content"
        android:layout_alignEnd="@+id/et_name_profile"
        android:layout_alignRight="@+id/et_name_profile"
        android:layout_alignStart="@id/et_name_profile"
        android:layout_alignLeft="@id/et_name_profile"
        android:layout_below="@+id/et_name_profile"
        android:layout_marginTop="30dp"
        android:hint="Email"
        android:layout_height="48dp"
        android:padding="10dp"
        android:textColor="#000"
        android:textColorHint="#000"/>

    <com.andreabaccega.widget.FormEditText
        android:id="@+id/et_password_signup"
        android:layout_width="wrap_content"
        android:layout_alignEnd="@+id/et_name_profile"
        android:layout_alignRight="@+id/et_name_profile"
        android:layout_alignStart="@id/et_name_profile"
        android:layout_alignLeft="@id/et_name_profile"
        android:layout_below="@+id/et_email_profile"
        android:layout_marginTop="30dp"
        android:hint="Password"
        android:inputType="textPassword"
        app:testErrorString="Cannot be Empty"
        app:testType="nocheck"
        android:layout_height="48dp"
        android:padding="10dp"
        android:textColor="#000"
        android:textColorHint="#000"/>

        <Button
            android:id="@+id/btn_change_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="116dp"
            android:backgroundTint="@color/colorAccent"
            android:text="Change"
            android:textColor="#FFF" />
    </RelativeLayout>



</LinearLayout>