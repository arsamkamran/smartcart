<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn_cart_clearcart"
            android:layout_alignBottom="@+id/btn_cart_clearcart"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:text="Total:" />

        <TextView
            android:id="@+id/total_cart_fragment"
            android:layout_marginTop="40sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="64dp"
            android:layout_marginLeft="64dp"
            android:text="0" />

        <Button
            android:id="@+id/btn_cart_clearcart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn_cart_checkout"
            android:layout_alignBottom="@+id/btn_cart_checkout"
            android:layout_alignEnd="@+id/btn_cart_checkout"
            android:layout_alignRight="@+id/btn_cart_checkout"
            android:layout_marginEnd="90dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/colorAccent"
            android:text="Clear Cart"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_cart_checkout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/colorAccent"
            android:text="Checkout"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:textSize="12sp" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_cart_items"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40sp">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>