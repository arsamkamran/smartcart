<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
            android:layout_marginTop="12sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="5sp"
            android:id="@+id/minus_cart_item"
            android:layout_width="16sp"
            android:layout_height="20sp"
            android:src="@drawable/ic_minus"/>

        <TextView
            android:id="@+id/item_quantity_cart_item"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="1"/>

        <ImageView
            android:layout_margin="12sp"
            android:id="@+id/plus_cart_item"
            android:layout_width="16sp"
            android:layout_height="20sp"
            android:src="@drawable/ic_plus"/>

        <TextView
            android:layout_margin="8sp"
            android:id="@+id/item_name_cart_item"
            android:layout_width="130sp"
            android:layout_height="wrap_content"
            android:text="name of item"
            android:singleLine="true"/>

        <TextView
            android:layout_marginRight="10sp"
            android:gravity="end|right"
            android:id="@+id/item_price_cart_item"
            android:layout_marginTop="8sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="price"
            android:singleLine="true"/>

        </LinearLayout>

        <View
            android:layout_marginTop="5sp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0.5sp"
            android:background="@android:color/darker_gray"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_marginRight="10sp"
                android:gravity="start|left"
                android:layout_marginLeft="15sp"
                android:layout_marginTop="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total:"/>

            <TextView
                android:layout_marginRight="10sp"
                android:gravity="end|right"
                android:id="@+id/item_total_item_cart"
                android:layout_margin="13sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"/>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>